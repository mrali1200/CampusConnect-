{
  "extends": ["expo/tsconfig.base"],
  "compilerOptions": {
    "strict": true,
    "jsx": "react-native",
    "lib": ["DOM", "ESNext"],
    "paths": {
      "@/*": ["./*"]
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "nativewind-env.d.ts"
  ]
}
